<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/pad_8_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textViewExternalApiId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/id_external_api"
        android:layout_marginTop="@dimen/pad_8_dp"
        android:layout_marginHorizontal="@dimen/pad_16_dp" />

    <TextView
        android:id="@+id/textViewExternalApiTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewExternalApiId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/app_name"
        android:layout_marginTop="@dimen/pad_8_dp"
        android:layout_marginHorizontal="@dimen/pad_16_dp" />

    <TextView
        android:id="@+id/textViewExternalApiBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewExternalApiTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/app_name"
        android:layout_marginTop="@dimen/pad_8_dp"
        android:layout_marginHorizontal="@dimen/pad_16_dp" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/pad_16_dp"
        android:layout_marginTop="@dimen/pad_8_dp"
        android:paddingBottom="@dimen/pad_8_dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewExternalApiBody"
        app:layout_constraintStart_toStartOf="parent"
        android:importantForAccessibility="no"
        android:background="@color/lt_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>